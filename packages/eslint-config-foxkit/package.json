{
  "name": "eslint-config-foxkit",
  "version": "1.1.0",
  "description": "Shareable ESLint config",
  "main": "index.js",
  "repository": "git@github.com:foxkit-js/eslint-config.git",
  "author": "Mitsunee <michelle@mitsunee.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "publish": "clean-publish"
  },
  "eslintConfig": {
    "extends": [
      ".",
      "prettier"
    ]
  },
  "nano-staged": {
    "**/*.js": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,md,d.ts}": [
      "prettier -w"
    ]
  },
  "files": [
    "rules",
    "index.js"
  ],
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "../../publish/eslint-config-foxkit",
    "packageManager": "yarn",
    "fields": [
      "scripts",
      "packageManager"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "clean-publish": "^4.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "nano-staged": "^0.6.0",
    "prettier": "^2.6.1"
  },
  "peerDependencies": {
    "eslint": "^7.32.0 || >=8.12.0"
  }
}
