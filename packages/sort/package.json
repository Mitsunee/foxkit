{
  "name": "@foxkit/sort",
  "version": "1.1.0",
  "type": "module",
  "description": "Fast Array sorting using Quick Sort",
  "keywords": [
    "sorting",
    "quick sort",
    "selection sort",
    "array",
    "algorithms"
  ],
  "exports": {
    ".": {
      "types": "./sort.d.ts",
      "import": "./dist/sort.js",
      "require": "./dist/sort.cjs"
    },
    "./stable": {
      "types": "./stable.d.ts",
      "import": "./dist/stable.js",
      "require": "./dist/stable.cjs"
    }
  },
  "repository": "Mitsunee/foxkit",
  "author": "Mitsunee",
  "license": "MIT",
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "test": "tsc --noEmit && uvu -r tsm -i helpers",
    "prebuild": "yarn lint && yarn test",
    "build": "rollup -c",
    "postbuild": "tsc --declaration --emitDeclarationOnly",
    "dev": "rollup -c -w",
    "publish": "yarn build && clean-publish",
    "bench": "tsm bench.js"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "foxkit",
      "foxkit/ts",
      "prettier"
    ]
  },
  "nano-staged": {
    "**/*.{js,ts}": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,md}": [
      "prettier -w"
    ]
  },
  "files": [
    "dist",
    "sort.d.ts",
    "stable.d.ts"
  ],
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "../../publish/sort",
    "packageManager": "yarn",
    "fields": [
      "scripts",
      "packageManager",
      "nano-staged"
    ],
    "files": [
      "src",
      "tests",
      "tsconfig.json",
      "rollup.config.mjs",
      "bench.js",
      "babel.config.json"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@foxkit/rollup-config": "*",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "benchmark": "^2.1.4",
    "clean-publish": "^4.0.0",
    "eslint": "^8.16.0",
    "eslint-config-foxkit": "*",
    "eslint-config-prettier": "^8.5.0",
    "nano-staged": "^0.8.0",
    "prettier": "^2.6.2",
    "rollup": "^2.75.3",
    "tsm": "^2.2.1",
    "typescript": "^4.7.2",
    "uvu": "^0.5.3"
  }
}
