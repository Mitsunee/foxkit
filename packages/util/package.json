{
  "name": "@foxkit/util",
  "version": "0.4.0",
  "description": "Collection of javascript utility modules",
  "keywords": [
    "foxkit",
    "utility",
    "range",
    "dedent",
    "sleep",
    "clamp"
  ],
  "repository": "Mitsunee/foxkit",
  "author": "Mitsunee",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./clamp": {
      "import": "./dist/clamp.js",
      "require": "./dist/clamp.cjs"
    },
    "./dedent": {
      "import": "./dist/dedent.js",
      "require": "./dist/dedent.cjs"
    },
    "./range": {
      "import": "./dist/range.js",
      "require": "./dist/range.cjs"
    },
    "./sleep": {
      "import": "./dist/sleep.js",
      "require": "./dist/sleep.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "test": "tsc --noEmit && uvu -r tsm",
    "prebuild": "eslint . && yarn test",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "publish": "yarn build && clean-publish"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "foxkit",
      "foxkit/ts",
      "prettier"
    ]
  },
  "nano-staged": {
    "**/*.{js,ts}": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,md}": [
      "prettier -w"
    ]
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "../../publish/util",
    "packageManager": "yarn",
    "fields": [
      "scripts",
      "packageManager",
      "nano-staged"
    ],
    "files": [
      "src",
      "tests",
      "rollup.config.mjs",
      "tsconfig.json"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@foxkit/rollup-config": "*",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "clean-publish": "^4.0.0",
    "eslint": "^8.12.0",
    "eslint-config-foxkit": "*",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^9.1.2",
    "nano-staged": "^0.6.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "tsm": "^2.2.1",
    "typescript": "^4.6.3",
    "uvu": "^0.5.3"
  }
}
