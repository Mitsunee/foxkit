{
  "name": "@foxkit/util",
  "version": "0.5.2",
  "description": "Collection of javascript utility modules",
  "keywords": [
    "foxkit",
    "utility",
    "range",
    "dedent",
    "sleep",
    "clamp"
  ],
  "repository": "Mitsunee/foxkit",
  "author": "Mitsunee",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./clamp": {
      "types": "./clamp.d.ts",
      "import": "./dist/clamp.js",
      "require": "./dist/clamp.cjs"
    },
    "./dedent": {
      "types": "./dedent.d.ts",
      "import": "./dist/dedent.js",
      "require": "./dist/dedent.cjs"
    },
    "./range": {
      "types": "./range.d.ts",
      "import": "./dist/range.js",
      "require": "./dist/range.cjs"
    },
    "./sleep": {
      "types": "./sleep.d.ts",
      "import": "./dist/sleep.js",
      "require": "./dist/sleep.cjs"
    },
    "./typeOf": {
      "types": "./typeOf.d.ts",
      "import": "./dist/typeOf.js",
      "require": "./dist/typeOf.cjs"
    }
  },
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "test": "tsc --noEmit && uvu -r tsm",
    "prebuild": "yarn lint && yarn test",
    "build": "rollup -c",
    "postbuild": "tsc --declaration --emitDeclarationOnly",
    "dev": "rollup -c -w",
    "publish": "yarn build && clean-publish"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "foxkit",
      "foxkit/ts",
      "prettier"
    ]
  },
  "nano-staged": {
    "**/*.{js,ts}": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,md}": [
      "prettier -w"
    ]
  },
  "files": [
    "dist",
    "clamp.d.ts",
    "dedent.d.ts",
    "range.d.ts",
    "sleep.d.ts",
    "typeOf.d.ts"
  ],
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "../../publish/util",
    "packageManager": "yarn",
    "fields": [
      "scripts",
      "packageManager",
      "nano-staged"
    ],
    "files": [
      "babel.config.json",
      "src",
      "tests",
      "rollup.config.mjs",
      "tsconfig.json"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@foxkit/rollup-config": "*",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "clean-publish": "^4.0.0",
    "eslint": "^8.12.0",
    "eslint-config-foxkit": "*",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^9.1.2",
    "nano-staged": "^0.8.0",
    "prettier": "^2.6.2",
    "rollup": "^2.75.3",
    "tsm": "^2.2.1",
    "typescript": "^4.7.2",
    "uvu": "^0.5.3"
  }
}
