{
  "name": "@foxkit/node-util",
  "version": "0.3.0",
  "description": "Nodejs Utility ES Modules",
  "repository": "Mitsunee/foxkit",
  "author": "Mitsunee",
  "license": "MIT",
  "type": "module",
  "packageManager": "yarn@1.22.18+",
  "exports": {
    "./fetch": {
      "import": "./dist/fetch.js",
      "types": "./dist/fetch/index.d.ts"
    },
    "./fs": {
      "import": "./dist/fs.js",
      "types": "./dist/fs/index.d.ts"
    },
    "./fs-yaml": {
      "import": "./dist/fs-yaml.js",
      "types": "./dist/fs-yaml/readFileYaml.d.ts"
    },
    "./log": {
      "import": "./dist/log.js",
      "types": "./dist/log/index.d.ts"
    },
    "./path": {
      "import": "./dist/path.js",
      "types": "./dist/path/index.d.ts"
    },
    "./readline": {
      "import": "./dist/readline.js",
      "types": "./dist/readline/readline.d.ts"
    }
  },
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint .",
    "test": "tsc --noEmit",
    "prebuild": "eslint . && yarn test",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "publish": "yarn build && clean-publish"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "foxkit",
      "foxkit/ts",
      "prettier"
    ]
  },
  "nano-staged": {
    "**/*.{js,ts}": [
      "eslint",
      "prettier -w"
    ],
    "**/*.{json,md}": [
      "prettier -w"
    ]
  },
  "files": [
    "dist/"
  ],
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "../../publish/node-util",
    "packageManager": "yarn",
    "fields": [
      "scripts",
      "packageManager",
      "nano-staged"
    ],
    "files": [
      "src",
      "rollup.config.mjs",
      "tsconfig.json"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@foxkit/rollup-config": "*",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "clean-publish": "^4.0.0",
    "eslint": "^8.16.0",
    "eslint-config-foxkit": "*",
    "eslint-config-prettier": "^8.5.0",
    "nano-staged": "^0.8.0",
    "prettier": "^2.6.1",
    "rollup": "^2.75.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.7.2",
    "yaml": "^2.1.1"
  },
  "peerDependencies": {
    "@types/node-fetch": "^2.6.1",
    "node-fetch": "^2.6.7 || >=3.1.1",
    "picocolors": "^1.0.0",
    "yaml": "^1.10.2"
  },
  "peerDependenciesMeta": {
    "@types/node-fetch": {
      "optional": true
    },
    "node-fetch": {
      "optional": true
    },
    "picocolors": {
      "optional": true
    },
    "yaml": {
      "optional": true
    }
  }
}
